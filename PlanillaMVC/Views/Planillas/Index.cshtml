
@{
    ViewBag.Title = "Index";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="panel panel-primary" id="panelPrincipal">
                <div class="panel-heading">Cálulo de salario en El Salvador.</div>
                <div class="panel-body">
                    <div class="col-sm-6">
                        <form action="/" method="post">
                            <div class="form-group">
                                <div class="checkbox-inline causa">
                                    <label><input type="checkbox" name="op1" value="afp" class="form-check-input causa" />AFP</label>
                                </div>
                                <div class="checkbox-inline causa">
                                    <label><input type="checkbox" name="op2" value="isss" class="form-check-input causa" />ISSS</label>
                                </div>
                                <div class="checkbox-inline causa">
                                    <label><input type="checkbox" name="op3" value="renta" class="form-check-input causa" />RENTA</label>
                                </div>
                                <div class="checkbox-inline">
                                    <label><input type="checkbox" name="op4" value="ninguno" id="ninguno" />NINGUNO</label>
                                </div>
                            </div>
                            <div class="form-group">
                            <input type="text" class="form-control" onkeypress="return check(event)" name="txtnombre" value="" autocomplete="off" placeholder="Ingrese el nombre del empleado" required/>
                            </div>
                            <div class="form-group">
                            <input type="number" class="form-control" name="txtpagoHora" value="" autocomplete="off" placeholder="Ingrese el pago por hora" required />
                            </div>
                            <div class="form-group">
                            <input type="number" class="form-control" name="txthoras" value="" autocomplete="off" placeholder="Ingrese el total de horas trabajadas" required />
                            </div>
                            <div class="form-group">
                            <input type="submit" class="btn btn-success btn-lg" name="btn" value="CALCULAR" />
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-6">
                        <img class="img-responsive" src="~/Content/Images/salario.jpg" />
                    </div>
                </div>
            </div>
            <hr />
            <div class="panel panel-info" id="detalle">
                <div class="panel-heading">Detalle del salario</div>
                <div class="panel-body">
                    <div class="jumbotron">
                        <div class="col-sm-2"></div>
                        <form action="/" method="post">
                            <div class="alert alert-info"><h5>Empleado: @ViewBag.Nombre</h5></div>
                            <div class="form-group">
                                <label>Salario bruto</label>
                                <input type="text" class="form-control" value="@ViewBag.SalarioBruto" readonly id="salariobruto" />
                            </div>
                            <div class="form-group">
                                <label>AFP</label>
                                <input type="text" class="form-control" value="@ViewBag.AFP" readonly />
                            </div>
                            <div class="form-group">
                                <label>ISSS</label>
                                <input type="text" class="form-control" value="@ViewBag.Isss" readonly />
                            </div>
                            <div class="form-group">
                                <label>Salario con descuentos</label>
                                <input type="text" class="form-control" value="@ViewBag.Salario" readonly />
                            </div>
                            <div class="form-group">
                                <label>Descuento por renta</label>
                                <input type="text" class="form-control" value="@ViewBag.Renta" readonly />
                            </div>
                            <div class="form-group">
                                <label>Salario quincenal</label>
                                <input type="text" class="form-control" value="@ViewBag.SalarioQuincenal" readonly />
                            </div>
                            <div class="form-group">
                                <label>Salario mensual</label>
                                <input type="text" class="form-control" value="@ViewBag.SalarioMensual" readonly />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>

@section script{
    <script type="text/javascript">
        $('#ninguno').on('change', function () {
            if ($(this).is(':checked')) {
                $(".causa").prop("disabled", true);
            } else {
                $(".causa").prop("disabled", false);
            }
        });
        function check(e) {
            tecla = (document.all) ? e.keyCode : e.which;

            if (tecla == 8) {
                return true;
            }

            patron = /[A-Z a-z]/;
            tecla_final = String.fromCharCode(tecla);
            return patron.test(tecla_final);
        } 
    </script>
}